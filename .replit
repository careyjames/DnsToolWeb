modules = ["python-3.11", "nodejs-20", "go-1.23", "postgresql-16", "bun-1.2", "gcloud", "nodejs-24", "postgresql-17", "python-3.9", "swift-5.8", "web", "docker", "swift-5.6", "bash"]

[nix]
channel = "stable-24_05"
packages = ["cacert", "chromium", "dnsutils", "freetype", "imagemagick", "lcms2", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "openssl", "postgresql", "potrace", "sqlc", "tcl", "tk", "unzip", "whois", "zlib", "nmap", "nmap-formatter", "python312Packages.nmapthon2"]

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "./dns-tool-server"]
build = ["sh", "-c", "CGO_ENABLED=0 go build -o dns-tool-server ./go-server/cmd/server/"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload main:app"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[userenv]

[userenv.shared]
SONAR_ORG = "careyjames"
SONAR_PROJECT = "careyjames_DnsToolWeb"
MAINTENANCE_NOTE = ""
SMTP_PROBE_MODE = "remote"

[userenv.development]
MAINTENANCE_NOTE = "Maintenance"

[agent]
integrations = ["github:1.0.0"]
