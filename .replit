modules = ["python-3.11", "nodejs-20", "go-1.23", "postgresql-16"]

[nix]
channel = "stable-24_05"
packages = ["cacert", "chromium", "openssl", "postgresql", "sqlc", "whois", "dnsutils"]

[deployment]
deploymentTarget = "autoscale"
run = ["sh", "-c", "./dns-tool-server"]
build = ["sh", "-c", "CGO_ENABLED=0 go build -o dns-tool-server ./go-server/cmd/server/"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload main:app"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[userenv]

[userenv.shared]
SONAR_ORG = "careyjames"
SONAR_PROJECT = "careyjames_DnsToolWeb"
